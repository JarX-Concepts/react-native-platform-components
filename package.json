{
  "name": "react-native-platform-components",
  "version": "0.8.4",
  "description": "Native UI components for React Native: DatePicker, ContextMenu, SelectionMenu, SegmentedControl, LiquidGlass.",
  "main": "./lib/commonjs/index.js",
  "module": "./lib/module/index.js",
  "browser": "./lib/module/index.web.js",
  "react-native": "./lib/module/index.js",
  "types": "./lib/typescript/commonjs/src/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.tsx",
      "browser": {
        "types": "./lib/typescript/module/src/index.web.d.ts",
        "default": "./lib/module/index.web.js"
      },
      "react-native": {
        "types": "./lib/typescript/module/src/index.d.ts",
        "default": "./lib/module/index.js"
      },
      "import": {
        "types": "./lib/typescript/module/src/index.d.ts",
        "default": "./lib/module/index.js"
      },
      "require": {
        "types": "./lib/typescript/commonjs/src/index.d.ts",
        "default": "./lib/commonjs/index.js"
      }
    },
    "./package.json": "./package.json",
    "./app.plugin": "./app.plugin.cjs"
  },
  "files": [
    "src",
    "lib",
    "shared",
    "android",
    "ios",
    "cpp",
    "plugin",
    "*.podspec",
    "react-native.config.js",
    "app.plugin.cjs",
    "expo-module.config.json",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!plugin/src",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace react-native-platform-components-example",
    "example-expo": "yarn workspace react-native-platform-components-example-expo",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build lib plugin/build",
    "prepare": "bob build && yarn build:plugin",
    "typecheck": "tsc",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "build": "tsc --noEmit",
    "build:plugin": "tsc -p plugin/tsconfig.json && mv plugin/build/index.js plugin/build/index.cjs",
    "release": "release-it",
    "test": "jest",
    "upgrade:check": "yarn dlx npm-check-updates",
    "upgrade:apply": "yarn dlx npm-check-updates -u && rm -rf node_modules && rm -rf package-lock.json && yarn install",
    "generate:gifs": "./scripts/generate-readme-gifs.sh"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "datepicker",
    "date-picker",
    "time-picker",
    "picker",
    "menu",
    "selection-menu",
    "context-menu",
    "dropdown",
    "native",
    "material-design",
    "expo",
    "segmented-control",
    "segmentedcontrol",
    "tabs",
    "segmented-buttons",
    "segmentedbuttons",
    "liquid-glass",
    "liquidglass"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JarX-Concepts/react-native-platform-components.git"
  },
  "author": "Andrew Tosh <andrew.tosh@jarxconcepts.com> (https://github.com/ajtosh77)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JarX-Concepts/react-native-platform-components/issues"
  },
  "homepage": "https://github.com/JarX-Concepts/react-native-platform-components#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/compat": "^2.0.1",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@expo/config-plugins": "^54.0.4",
    "@react-native-community/cli": "20.1.0",
    "@react-native/babel-preset": "0.83.1",
    "@react-native/eslint-config": "^0.83.1",
    "@release-it/conventional-changelog": "^10.0.4",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.2.9",
    "@types/react-test-renderer": "^19.1.0",
    "babel-preset-expo": "^54.0.10",
    "commitlint": "^20.3.1",
    "del-cli": "^7.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "jest": "^30.2.0",
    "lefthook": "^2.0.15",
    "prettier": "^3.8.1",
    "react": "19.2.3",
    "react-native": "0.83.1",
    "react-native-builder-bob": "^0.40.17",
    "react-test-renderer": "19.2.3",
    "release-it": "^19.2.4",
    "turbo": "^2.7.5",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "workspaces": [
    "example",
    "example-expo"
  ],
  "packageManager": "yarn@4.11.0",
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "codegenConfig": {
    "name": "PlatformComponentsViewSpec",
    "type": "components",
    "jsSrcsDir": "src",
    "android": {
      "javaPackageName": "com.platformcomponents"
    },
    "ios": {
      "componentProvider": {
        "PCSelectionMenu": "PCSelectionMenu",
        "PCDatePicker": "PCDatePicker",
        "PCContextMenu": "PCContextMenu",
        "PCSegmentedControl": "PCSegmentedControl",
        "PCLiquidGlass": "PCLiquidGlass"
      }
    }
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}",
      "requireCleanWorkingDir": false
    },
    "npm": {
      "publish": true,
      "skipChecks": true,
      "publishArgs": [
        "--access",
        "public"
      ]
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/example/e2e/"
    ]
  },
  "create-react-native-library": {
    "languages": "kotlin-objc",
    "type": "fabric-view",
    "tools": [
      "eslint",
      "lefthook",
      "release-it",
      "jest"
    ],
    "version": "0.55.1"
  }
}
